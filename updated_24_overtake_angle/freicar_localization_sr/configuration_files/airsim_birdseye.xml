<configuration datetime="29-Sep-2018" target="airsim_camera">

  <sensor description="freiburg" target="airsim">
  
    <!-- width of the image after transformation [meter] -->
    <value name="ipm_width" value="3"/>
    
    <!-- height of the image after birdseye transformation [meter]-->
    <value name="ipm_height" value="2"/>
    
    <!-- number of pixel per meter in image after birdseye transformation -->
    <value name="ipm_scale" value="100"/>
    
    <!-- distance [meter] to shift points in street coordinates to the right -->
    <!-- such that they have positive coordinates that can be shown in an image -->
    <!-- if street originY is the center of the car: usually (ipm_width / 2) -->
    <value name="ipm_street_img_offset" value="1.5"/>

    <!-- src points in image coordinates (x-axis=right, y-axis=down) [pixel] -->
    <!-- origin top left of the image-->
    <value name="src_1x" value="604"/>
    <value name="src_1y" value="76"/>
    <value name="src_2x" value="35"/>
    <value name="src_2y" value="76"/>
    <value name="src_3x" value="444"/>
    <value name="src_3y" value="24"/>
    <value name="src_4x" value="195"/>
    <value name="src_4y" value="24"/>

    <!-- dst points in street coordinates (x-axis=forward, y-axis=left) [meter] -->
    <!-- originX = front bumper of the car -->
    <!-- originY = center of the car -->
    <value name="dst_1x" value="0.67"/>
    <value name="dst_1y" value="1.07"/>
    <value name="dst_2x" value="0.67"/>
    <value name="dst_2y" value="-1.07"/>
    <value name="dst_3x" value="3.58"/>
    <value name="dst_3y" value="2.84"/>
    <value name="dst_4x" value="3.58"/>
    <value name="dst_4y" value="-2.84"/>

  </sensor>
  
</configuration>

